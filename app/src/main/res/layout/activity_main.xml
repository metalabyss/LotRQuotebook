<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/hint_edit_text"
        android:inputType="textCapWords"
        android:textSize="@dimen/et_character_search_text_size" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="@dimen/pb_layout_size"
        android:layout_height="@dimen/pb_layout_size"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_character_prop_text_size"
        android:layout_marginTop="@dimen/top_margin"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin">

        <LinearLayout
            android:id="@+id/layout_character_info"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingHorizontal="@dimen/character_layout_padding">

            <TextView
                android:id="@+id/text_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_character_prop_text_size" />

            <TextView
                android:id="@+id/text_character_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_character_prop_text_size" />

            <TextView
                android:id="@+id/text_character_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_character_prop_text_size" />

            <TextView
                android:id="@+id/text_character_realm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_character_prop_text_size" />

            <Button
                android:id="@+id/btn_get_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_get_quote"
                android:layout_marginTop="@dimen/btn_quote_top_margin"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>